<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp" android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp"/>
        </shape>
    </item>
    <item android:state_middle="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_last="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp" android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
